#!/usr/bin/env node

/**
 * Entry script to boot the API application.
 * @type {*|exports}
 */

var debug = require('debug')('revoList_API'),
    app = require('../app.js'),
    colors = require('colors');


app.set('port', process.env.PORT || 2000);

var server = app.listen(app.get('port'), function() {
  debug('Express server listening on port ' + server.address().port);

  console.info(('revoList API started on port ' + server.address().port + ' and waiting for incoming requests.').toString().green);
  console.info('Terminate this process to shutdown revoList API.'.yellow);
});
